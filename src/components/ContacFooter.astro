---
import "../styles/style.css";
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GRUPOAQUA | Ingeniería en el manejo del agua | Colombia</title>
    <link rel="icon" type="image/avif" href="/Grupo_AQUA/img/Fabicon.avif" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>
  <body>
    <!-- Footer section -->
    <footer>
      <div class="footer-bg-overlay"></div>
      <div class="footer-container">
        <div class="footer-content">
          <div class="footer-contact">
            <h3>Contacto</h3>
            <div class="contact-item">
              <i class="fa-solid fa-location-dot"></i>
              <div>
                <p>Carrera 43F 14 - 45, El Poblado</p>
                <p>Medellín - Colombia</p>
              </div>
            </div>
            <div class="contact-item">
              <i class="fa-solid fa-envelope"></i>
              <p>ventas@grupoaqua.com</p>
            </div>
            <div class="contact-item">
              <i class="fa-solid fa-phone"></i>
              <p>Teléfono: (604) 448 8224</p>
            </div>
            <div class="contact-item">
              <i class="fa-brands fa-whatsapp"></i>
              <p>Whatsapp: 316 525 0933</p>
            </div>
          </div>
          <div class="footer-logo-section">
            <div class="footer-logo">
              <img src="/Grupo_AQUA/img/GrupoAqua_Logo.avif" alt="GRUPOAQUA Logo" />
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          <p>
            Copyright © 2024 Grupoaqua S.A.S | Todos los derechos reservados
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>